<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location"
            android:contentDescription="event_image" />


        <ImageButton
            android:layout_marginStart="340dp"
            android:layout_marginTop="0dp"
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectImageButton"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:gravity="end"
            app:srcCompat="@android:drawable/ic_menu_save" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="112dp"
            android:layout_marginTop="-30dp"
            android:text="Offer your event"
            android:textColor="#388084"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="44dp" />

        <LinearLayout
            android:layout_width="285dp"
            android:layout_height="55dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_background"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="84dp" >

                <EditText
                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/description"
                    android:autofillHints="description"
                    android:hint="Title"
                    android:inputType="text"
                    android:textColor="@android:color/black"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the name of the event"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="131dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="3dp"/>

        <LinearLayout
            android:layout_marginStart="2dp"
            android:layout_marginTop="40dp"
            android:layout_width="350dp"
            android:layout_height="53dp"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/rounded_background"

                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="52dp"
                    tools:layout_editor_absoluteY="195dp">


                        <EditText
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_below="@id/type"
                            android:autofillHints="description"
                            android:hint="Date"
                            android:inputType="text"
                            android:textColor="@android:color/black" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_background"

                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="217dp"
                    tools:layout_editor_absoluteY="195dp">

                        <EditText

                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="57dp"
                            android:layout_below="@id/Name"
                            android:autofillHints="description"
                            android:hint="Price"
                            android:inputType="text"
                            android:textColor="@android:color/black" />
                </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

                <TextView

                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Time"
                    tools:layout_editor_absoluteX="69dp"
                    tools:layout_editor_absoluteY="247dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/textView6"
                    android:layout_width="93dp"
                    android:layout_height="19dp"
                    android:text="Set price"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="217dp"
                    tools:layout_editor_absoluteY="247dp" />
        </LinearLayout>


        <LinearLayout

            android:layout_marginStart="2dp"
            android:layout_marginTop="70dp"
            android:layout_width="350dp"
            android:layout_height="53dp"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/rounded_background"

                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="52dp"
                    tools:layout_editor_absoluteY="195dp">

                        <EditText
                            android:id="@+id/location"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_below="@id/date"
                            android:autofillHints="description"
                            android:hint="Location"
                            android:inputType="text"
                            android:textColor="@android:color/black" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_background"

                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="217dp"
                    tools:layout_editor_absoluteY="195dp">

                        <EditText
                            android:id="@+id/type"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_below="@id/price"
                            android:autofillHints="description"
                            android:hint="Type"
                            android:inputType="text"
                            android:textColor="@android:color/black" />

                </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal">
                <TextView

                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set location"
                    tools:layout_editor_absoluteX="69dp"
                    tools:layout_editor_absoluteY="247dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/textView3"
                    android:layout_width="93dp"
                    android:layout_height="19dp"
                    android:text="Event type"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="217dp"
                    tools:layout_editor_absoluteY="247dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="72dp"
            android:layout_marginTop="50dp"
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_background"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.591"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.533">


                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="description"
                    android:hint="Description"
                    android:inputType="text"
                    android:textColor="@android:color/black" />
        </LinearLayout>

        <TextView
            android:layout_marginStart="85dp"
            android:layout_marginTop="1dp"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the dedcription of the event"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="400dp" />

        <LinearLayout
            android:layout_marginStart="132dp"
            android:layout_marginTop="30dp"
            android:layout_width="123dp"
            android:layout_height="128dp"
            android:background="@drawable/rounded_background"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="444dp">


                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/picture"
                    android:layout_width="68dp"
                    android:layout_height="65dp"

                    android:background="#B2B1B2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/picture"
                    app:tint="#4D4D4D"
                    tools:layout_editor_absoluteX="76dp"
                    tools:layout_editor_absoluteY="476dp" />
        </LinearLayout>


        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_below="@id/eventImage"
            android:layout_marginStart="230dp"
            android:layout_marginTop="-25dp"
            android:backgroundTint="#388084"
            android:text="select_image"
            android:textColorHighlight="#000003"
            android:textColorLink="#388084" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="80dp"
            android:layout_height="17dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="-30dp"
            android:layout_marginBottom="48dp"
            android:text="add photos"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="81dp" />


</LinearLayout>
