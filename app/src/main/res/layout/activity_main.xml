<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Welcome!  "
        android:textColor="#388084"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Let's choose your interests !"
        android:textColor="#444444"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        :tools="http://schemas.android.com/tools"
        android:layout_width="413dp"
        android:layout_height="415dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <RadioButton
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@drawable/null_radio_button"
            android:elevation="4dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="camping"
            android:textColor="#4D4D4D" />

        <RadioButton
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@drawable/null_radio_button"
            android:elevation="4dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="yoga"
            android:textColor="#4D4D4D" />

        <RadioButton
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@drawable/null_radio_button"
            android:elevation="4dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingStart="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="mountains"
            android:textColor="#4D4D4D" />

        <RadioButton
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@drawable/null_radio_button"
            android:elevation="4dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingStart="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="with children"
            android:textColor="#4D4D4D" />

        <RadioButton
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/radio_selector"
            android:button="@drawable/null_radio_button"
            android:elevation="4dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="concerts"
            android:textColor="#4D4D4D" />


        <RadioButton
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@drawable/null_radio_button"
            android:elevation="4dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="excursions"
            android:textColor="#4D4D4D" />

        <RadioButton
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@drawable/null_radio_button"
            android:elevation="4dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="sea"
            android:textColor="#4D4D4D"
            tools:layout_editor_absoluteX="-18dp"
            tools:layout_editor_absoluteY="501dp" />

        <RadioButton
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selector"
            android:button="@drawable/null_radio_button"
            android:elevation="4dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="night life"
            android:textColor="#4D4D4D" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="68dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_logo_foreground" />


</androidx.constraintlayout.widget.ConstraintLayout>